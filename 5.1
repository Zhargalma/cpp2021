#include <iostream> //подключаем библиотеку "iostream"

using namespace std ; //используем пространство имён std

float SquaredSum(float a, float b,float result)//задали функцию,где "float"-тип данного,возвращаемого функцией,"SquaredSum"-имя функции,(float a, float b,float result)-параменты функции(переменные,которые получают значения аргументов,передаваемых функции при её вызове
{  // начало тела функции
    result=(a+b)*(a+b); // выполняется присваивание переменной result
    return result; // возвращение значения result
} // завершение функции

int main ()  //вызов фунуции main, int задаёт тип данного,возращаемого функцией main
{ // начало тела функции
    float c,d,result; // объявление переменных c,d,result
    cout<<"Введите первое дробное число\n"; // вывод на экран текста,"\n"-перенос курсора на следующую строчку
    cin>>c; // вводим значение с с клавиатуры(параметр,принимающий значение аргумента в функции)
    cout<<"Введите второе дробное число\n"; // вывод на экран текста,"\n"-перенос курсора на следующую строчку
    cin>>d; // вводим значение d с клавиатуры(параметр,принимающий значение аргумента в функции)
    cout<<"Результат - "<<SquaredSum(c,d,result)<<"\n"; //вывод результата на экран
} //завершение тела функции
